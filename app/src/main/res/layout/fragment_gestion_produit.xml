<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GestionProduit">

    <!-- En-tête statique -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvHeaderNomProduit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gabarit"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeaderDateExpiration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Expiration"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeaderQuantite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quantité"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHeaderPrix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prix"
            android:gravity="center"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ListView -->
    <ListView
        android:id="@+id/lvProduits"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button Ajouter -->
    <Button
        android:id="@+id/btnAjouterProduit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:layout_gravity="center_horizontal"
        android:background="#BDBDBD" />

</LinearLayout>
